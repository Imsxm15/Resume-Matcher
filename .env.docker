# .env.docker

# --- General configuration ---
PROJECT_NAME=resume-matcher-docker
SESSION_SECRET_KEY=change-me-in-production-secret-key
SYNC_DATABASE_URL=sqlite:////data/app.db
ASYNC_DATABASE_URL=sqlite+aiosqlite:////data/app.db

# --- OpenAI configuration ---
LLM_PROVIDER=openai
EMBEDDING_PROVIDER=openai
LL_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# Inject your own OpenAI API key before running docker compose
OPENAI_API_KEY=<your-openai-api-key>
LLM_API_KEY=${OPENAI_API_KEY}
EMBEDDING_API_KEY=${OPENAI_API_KEY}

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:8000
